#!/usr/bin/env ruby
require 'colsole'
include Colsole

begin
  require 'jobly'
  require 'jobly/boot'

  router = Jobly::CLI.router

  exit router.run ARGV

rescue => e
  puts e.backtrace.reverse if ENV['DEBUG']
  say! "!txtred!#{e.class}: #{e.message}"
  say! "Run with !txtpur!DEBUG=1!txtrst! for backtrace details" unless ENV['DEBUG']
  exit 1
end